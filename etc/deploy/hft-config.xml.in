<?xml version="1.0" encoding="UTF-8"?>
<hft>
	<server>
		<!--
		Available logging severities:
			FATAL
			ERROR
			WARNING
			INFO
			TRACE
			DEBUG
		-->
		<logging severity="INFO"/>

		<sms-alerts active="false" sandbox="false">
			<!--
			 Login and password for SMS gateway.
			 You must have account in service
			 gsmservice.pl
			-->
			<auth>
				<login>YOURLOGIN</login>
				<password>YOURPASSWORD</password>
			</auth>

			<!--
			 Recipient is a phone number.
			 Multiple recipiens are available.
			-->
			<recipient>000000000</recipient>
		</sms-alerts>
	</server>
	<market-gateway-processes>
		<process name="Dukascopy" active="false">
			<exec>java</exec>
			<initial-dir>/var/lib/hft/marketplace-gateways/dukascopy</initial-dir>
			<param>-cp</param>
			<param>hft-bridge-@HFTVERSION@.jar:*</param>
			<param>hft2ducascopy/Main</param>
			<param>--port=$(HFT_PORT)</param>
			<param>--host=$(HFT_ENDPOINT)</param>
		</process>
	</market-gateway-processes>

	<market bridge="Dukascopy" sessid="dukascopy-session" >
		<auth account="demo">
			<!--
			Enter here your credentials to Dukascopy account.
			-->
			<login>YOURLOGIN</login>
			<password>YOURPASSWORD</password>
		</auth>

		<!--
			Enter the instrument tickers for which you want to download here
			data from the stock exchange and then transferred to HFT,
			here is an example:

			<instrument ticker="EUR/USD"/>
		-->
	</market>

	<dukascopy-emulator>
		<!--
			If you want to use the 'dukascopy-emulator' tool, please enter it here
			parameters of the instrument you want to simulate. Detailed information can be found at
			https://www.dukascopy.com/europe/english/marketwatch/forexcalc/forex-calculator/
			Here are some examples for a Dukascopy account maintained in PLN.
		-->
		<instrument-property ticker="EUR/USD"
				pip-significant-digit="4"
				pip-value-per-contract="0.0003876"
				long-dayswap-per-contract="-0.0001558"
				short-dayswap-per-contract="0.0000038"
				commision-per-contract="0.0001649"
		/>

		<instrument-property ticker="GBP/USD"
				pip-significant-digit="4"
				pip-value-per-contract="0.0003876"
				long-dayswap-per-contract="-0.000081"
				short-dayswap-per-contract="-0.0000772"
				commision-per-contract="0.0001925"
		/>

		<instrument-property ticker="XAU/USD"
				pip-significant-digit="2"
				pip-value-per-contract="0.04"
				long-dayswap-per-contract="-0.25"
				short-dayswap-per-contract="-0.04"
				commision-per-contract="0.39"
		/>

		<instrument-property ticker="USA500.IDX/USD"
				pip-significant-digit="2"
				pip-value-per-contract="0.04"
				long-dayswap-per-contract="-1.09"
				short-dayswap-per-contract="-0.98"
				commision-per-contract="1.01"
		/>

	</dukascopy-emulator>

</hft>
